name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: input artifact taken from the EDA step
        type: string

      output_artifact:
        description: name for the cleaned data to store as artifcat
        type: string

      output_type:
        description: type for the output artifact
        type: string

      output_description:
        description: description for the output artifact
        type: string

      min_price:
        description: minimum price for the target variable
        type: float

      max_price:
        description: maximum price for the target variable
        type: float


    command: >-
        python run.py --input_artifact {input_artifact} --output_artifact {output_artifact} --output_type {output_type} --output_description {output_description} --min_price {min_price} --max_price {max_price} 
